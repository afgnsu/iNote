<div class="col-md-6 col-md-offset-3">
  <% if @note.title.blank? %>
    <h3><%= @note.link_title %></h3>
  <% else %>
    <h3><%= @note.title %></h3>
  <% end %>
  <% if @note.description.blank? %>
      <p><%= truncate(@note.link_description, length: 100) %></p>
  <% else %>
      <p><%= truncate(@note.description, length: 100) %></p>
  <% end %>        
  <p>
    <%= link_to @note.link, target: "_blank", "data-toggle": "popover", "data-trigger": "hover", "data-content": "Have a look!" do %>
      <span class="glyphicon glyphicon-eye-open"></span>
    <% end %>
  </p> 
  <%= image_tag @note.link_picture, alt: truncate(@note.description, length: 25), class: "img-thumbnail img-center" %>
</div>