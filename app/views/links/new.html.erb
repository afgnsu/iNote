<h2>Add new link</h2>

<div class="col-md-6 col-md-offset-3">
  <%= form_for [current_user, @link] do |f| %>
    <div class="form-group">
      <%= f.text_field :title, class: "form-control", :placeholder => "Enter the title" %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, class: "form-control", :placeholder => "Enter the description" %>
    </div>  
    <div class="form-group">
      <%= f.text_field :link, class: "form-control", :placeholder => "Enter the url" %>
    </div>   
    <%= hidden_field_tag "category_id", params[:category_id] %>   
    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-primary col-md-4 col-md-offset-4"%>
    </div>
  <% end %>
</div>