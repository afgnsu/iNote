<div class="center jumbotron">
  <h1>Welcome to iNOTE</h1>
  <h2>
      No time to review all the information you noted? Let us FLASH it for you!
  </h2>
  <% if signed_in? %>
      <div class="row">
          <%= link_to flashcard_user_path(current_user), class: "btn btn-lg btn-primary", id: "btn-flash" do %>
              <span class="glyphicon glyphicon-flash"></span> Flash Now !
          <% end %>
      </div>
  <% else %>
      <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary", id: "btn-signup" %>
  <% end %>
</div>
<% if signed_in? %>
  <div class="row">
      <%= form_tag "#" do %>
          <div class="col-md-8 col-md-offset-1">
              <div class="form-group">
                  <%= text_field_tag :quick_link, params[:link], class: "form-control", :placeholder => "Enter the url" %>
              </div>
          </div>
          <div class="col-md-3">
              <div class="form-actions">
                  <%= submit_tag "Quick Note!", class: "btn btn-danger col-md-6" %>
              </div>
          </div>
      <% end %>
  </div>
<% end %>
