<div class="container">
  <h2><%= @category.name %></h2>
  <% if @notes.empty? %>
    <br>
    <h4>You don't have any notes for this category now!</h4>
  <% else %>
    <% @notes.each do |note| %>
      <div class="col-md-4">
        <h3><%= note.title %></h3>
        <p><%= note.description %></p>
        <p><%= link_to "Go!", full_url(note.link), target: "_blank" %></p>
        <%= image_tag "http://dummyimage.com/150x150", alt: "Test" %>
      </div>
    <% end %>   
  <% end %>
  <div class="row">
    <div>
      <%= link_to "Add new note", new_user_category_note_path(current_user, @category), class: "btn btn-lg btn-primary col-md-4 col-md-offset-4", id: "btn-add" %>
    </div>    
  </div>
</div>