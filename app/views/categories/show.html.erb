<div class="container">
  <h2><%= @category.name %></h2>
  <div class="row">
    <div class="col-md-3 col-md-offset-9">
    <div class="btn-group pull-right">  
      <%= link_to "Add Note", new_user_category_note_path(current_user, @category), class: "btn btn-default" %>
      <div class="btn-group">  
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Sorting
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li class=<%= li_active(@sort_now,"newest") %> ><%= link_to "From Newest", user_category_path(current_user,@category, sort: "newest"), class: link_sort_active(@sort_now,"newest") %></li>
          <li class=<%= li_active(@sort_now,"oldest") %> ><%= link_to "From Oldest", user_category_path(current_user,@category, sort: "oldest"), class: link_sort_active(@sort_now,"oldest") %></li>
        </ul>
      </div>
    </div>
    </div>
  </div>
  <hr>
  <% if @notes.empty? %>
    <br>
    <h4>You don't have any notes for this category now!</h4>
  <% else %>
    <div id="notes" class="transitions-enabled">
      <% @notes.each do |note| %>
      <div class="box panel panel-default">
        <div class="panel-heading note_image">
          <%= image_tag note.link_picture, alt: note.description %>
        </div>
        <div class="panel-body">
          <% if note.title.blank? %>
            <h2><%= note.link_title %></h2>
          <% else %>
            <h2><%= note.title %></h2>
          <% end %>
          <% if note.description.blank? %>
            <p><%= truncate(note.link_description, length: 70) %></p>
          <% else %>
            <p><%= truncate(note.description, length: 70) %></p>
          <% end %>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-8">
              <h5><%= time_ago_in_words(note.updated_at) %> ago</h5>
            </div>
            <div class="col-md-4">
              <div class="btn-group pull-right">
                <%= link_to note.link, target: "_blank", "title": "#{note.link_title}", "data-toggle": "popover", "data-trigger": "hover", 
                    "data-content": "<p>#{truncate(note.link_description, length: 100)},</p>", class: "btn btn-default" do %>
                  <span class="glyphicon glyphicon-arrow-right"></span>
                <% end %>
              </div> 
            </div>
          </div>
        </div>
        <a href="#"><span class="label label-default label-close">x</span></a>
      </div>
      <% end %> 
    </div>
  <% end %>
</div>