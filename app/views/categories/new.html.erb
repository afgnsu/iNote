<h2>Add new category</h2>

<div class="col-md-4 col-md-offset-4">
  <%= form_for [current_user,@category] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", :placeholder => "Enter the category name" %>
    </div>
    <div class="form-group">
      <%= f.check_box :private %>
      <%= f.label :private %>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-primary col-md-4 col-md-offset-4"%>
    </div>
  <% end %>
</div>