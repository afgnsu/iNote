<div class="col-md-6 col-md-offset-3">
  <% if @note.title.blank? %>
    <h3><%= @note.link_title %></h3>
  <% else %>
    <h3><%= @note.title %></h3>
  <% end %>
  <% if @note.description.blank? %>
      <p><%= truncate(@note.link_description, length: 100) %></p>
  <% else %>
      <p><%= truncate(@note.description, length: 100) %></p>
  <% end %>        
  <p>
    <%= link_to "Go!", @note.link, target: "_blank", "title": "#{@note.link_title}", "data-toggle": "popover", "data-trigger": "hover", "data-content": "<p>#{truncate(@note.link_description, length: 100)}</p>" %>
  </p> 
  <%= image_tag @note.link_picture, alt: truncate(@note.description, length: 25), size: "250x250", class: "img-thumbnail img-center" %>
</div>
<div class="row">
  <div>
    <%= link_to flashcard_user_category_path(current_user, @category), class: "btn btn-lg btn-primary col-md-2 col-md-offset-5", id: "btn-add" do %>
      <span class="glyphicon glyphicon-flash"></span> Flash! 
    <% end %>
  </div>    
</div>